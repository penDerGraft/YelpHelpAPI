<div class="modal fade" id="make-post">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New Restaurant</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="rest-name">Restaurant Name</label>
                            <input type="text" class="form-control" id="rest-name" placeholder="Restaurant Name">
                        </div class="col-lg-12">
                    </div>
                    <div class="form-group">
                        <div class=" col-lg-12">
                            <label for="category">Restaurant Category</label>
                            <input type="text" class="form-control" id="category" placeholder="Category">
                        </div class=" col-lg-12">
                    </div>
                    <div class="form-group">  
                        <div class=" col-lg-12">
                            <label for="line-1">Address Line 1</label>
                            <input type="text" class="form-control" id="add-line-1" placeholder="555 Main St">
                        </div>                      
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">                            
                            <label for="add-city">City</label>
                            <input type="text" class="form-control" id="add-city" placeholder="Little Rock">
                        </div>
                        <div class="col-lg-3">                           
                            <label for="add-state">State</label>
                            <input type="text" class="form-control" id="add-state" placeholder="AR">
                        </div> 
                        <div class="col-lg-3">
                            <label for="add-zip">Zip Code</label>
                            <input type="text" class="form-control" id="add-zip" placeholder="77777">
                        </div>                                                   
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="rest-rating">Rating</label>
                            <select class="form-control" id="rest-rating">
                                <option>1</option>
                                <option>1.5</option>
                                <option>2</option>
                                <option>2.5</option>
                                <option>3</option>
                                <option>3.5</option>
                                <option>4</option>
                                <option>4.5</option>
                                <option>5</option>
                            </select>
                            <p class="help-block">Number of stars the restaurant has received</p>
                        </div class="col-lg-12">
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="lat">Latitude</label>
                            <input type="text" class="form-control" id="lat" placeholder="35.246819">
                        </div class="col-lg-6">
                        <div class="col-lg-6">
                            <label for="long">Longitude</label>
                            <input type="text" class="form-control" id="long" placeholder="-91.733688">
                        </div class="col-lg-6">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="post-btn">Submit</button>
                </div class="col-lg-12">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




